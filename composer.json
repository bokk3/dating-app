{
    "name": "bokke/dating-app",
    "description": "A modern PHP-based dating application with mobile-first design",
    "type": "project",
    "version": "1.0.0",
    "license": "MIT",
    "authors": [
        {
            "name": "Dating App Developer",
            "email": "developer@datingapp.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-gd": "*",
        "phpmailer/phpmailer": "^6.8",
        "predis/predis": "^2.2",
        "ramsey/uuid": "^4.7",
        "intervention/image": "^2.7",
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "DatingApp\\": "src/",
            "DatingApp\\Controllers\\": "src/controllers/",
            "DatingApp\\Models\\": "src/models/",
            "DatingApp\\Utils\\": "src/utils/",
            "DatingApp\\Middleware\\": "src/middleware/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DatingApp\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs --standard=PSR12 src/",
        "cs-fix": "phpcbf --standard=PSR12 src/",
        "analyze": "phpstan analyse src --level=8",
        "setup": [
            "@composer install",
            "php database/migrate.php"
        ],
        "dev-setup": [
            "@setup",
            "php database/seed.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": [],
    "extra": {
        "platform": {
            "php": "8.0"
        }
    }
}